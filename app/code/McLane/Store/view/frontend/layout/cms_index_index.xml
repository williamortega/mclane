<?xml version="1.0"?>
<!--
/**
 * Load this configuration (cms_page_view_id_home.xml) block in Home page.
 */
-->
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="mclane.store.main" />
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="mclane.store.component"
                   template="McLane_Store::component.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">McLane\Store\ViewModel\CartItems</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>