<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Logo -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">233</argument>
                <argument name="logo_img_height" xsi:type="number">61</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="minicart" remove="true" />
        <referenceBlock name="mclane.block.switchstore" remove="true" />
        <referenceContainer name="header.right">
            <block class="Magento\Customer\Block\Account\AuthorizationLink" name="account.options"
                   template="Magento_Customer::account/link/authorization.phtml" />
        </referenceContainer>
    </body>
</page>
